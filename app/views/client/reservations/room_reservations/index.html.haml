%h1 My Reservation

#modal-window.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog"}
- @room_reservations.each do |rr|
  .container.room_choice
    .roomNo#no
      ROOM NO.
      =rr.room.room_no
    %table.table.table-borderless
      %tr
        %td{style: "border: none"}
          %b CHECK-IN :
          = text_field_tag "rooms[0]check_in", rr.start_date.to_date, placeholder: Date.today, required: true, autocomplete: :off
        %td{style: "border: none"}
          %b CHECK-OUT :
          = text_field_tag "rooms[0]check_out", rr.end_date.to_date, placeholder: Date.today, required: true, autocomplete: :off
      %tr
        %td{style: "border: none"}
          %b TYPE :
          = getRoomTypeForRoom(rr.room)
        %td{style: "border: none"}
          %b VIEW :
          = getViewTypeForRoom(rr.room)
    = link_to :CHANGE, edit_client_reservation_room_reservation_path(@reservation.id, @room_reservations.first().id), class: "btn btn-default btn-edit-room", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'
